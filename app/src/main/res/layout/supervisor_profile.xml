<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E9ECEF"
    android:paddingVertical="15sp"
    android:id="@+id/supervisor_profile">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Profile"
        app:layout_constraintBottom_toTopOf="@id/cl1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.4"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/clAccount"
        >

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Email"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv3"
            android:paddingVertical="15dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/spTvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/tv2"
            app:layout_constraintBottom_toBottomOf="@id/tv2"
            app:layout_constraintStart_toEndOf="@id/tv2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"/>


        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Group size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv2"
            app:layout_constraintBottom_toTopOf="@id/tv4"
            android:paddingVertical="15dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/spTvGroupSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/tv3"
            app:layout_constraintBottom_toBottomOf="@id/tv3"
            app:layout_constraintStart_toEndOf="@id/tv3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Module lead"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv3"
            app:layout_constraintBottom_toTopOf="@id/tv5"
            android:paddingVertical="15dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/spTvModuleLead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/tv4"
            app:layout_constraintBottom_toBottomOf="@id/tv4"
            app:layout_constraintStart_toEndOf="@id/tv4"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Maintenance"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv4"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingVertical="15dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/spTvMaintenance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/tv5"
            app:layout_constraintBottom_toBottomOf="@id/tv5"
            app:layout_constraintStart_toEndOf="@id/tv5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clAccount"
        android:paddingHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_weight="0.5"
        android:background="@color/white">

        <Button
            android:id="@+id/btnSupervisorAccountSignOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign-Out"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textStyle="normal"
            app:backgroundTint="#6247AA"
            app:cornerRadius="60dp"
            app:iconPadding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>