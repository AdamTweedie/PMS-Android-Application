<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E9ECEF"
    android:paddingHorizontal="25dp"
    android:paddingVertical="25dp">

    <TextView
        android:id="@+id/psiWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#6247AA"
        android:text="Project Selection"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/psiIntro3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_marginTop="15dp"
        android:text="Use our AI powered project recommendation system"
        app:layout_constraintTop_toBottomOf="@id/psiWelcome"
        />

    <Button
        android:id="@+id/psiBtnLoadRecommender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="AI Recommender"
        android:textAllCaps="false"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@id/psiIntro3"
        app:layout_constraintStart_toStartOf="@id/psiBtnSuggestOwnProject"
        app:layout_constraintEnd_toEndOf="@id/psiBtnSuggestOwnProject"
        app:backgroundTint="#6247AA"
        app:cornerRadius="60dp"
        app:iconPadding="8dp"
        />




    <TextView
        android:id="@+id/psiIntro4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:layout_marginTop="20dp"
        android:text="Or, "
        app:layout_constraintTop_toBottomOf="@id/psiBtnLoadRecommender" />

    <Button
        android:id="@+id/psiBtnSuggestOwnProject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Suggest your own"
        android:textAllCaps="false"
        android:textSize="17sp"
        app:backgroundTint="#6247AA"
        app:cornerRadius="60dp"
        app:iconPadding="8dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintTop_toBottomOf="@id/psiBtnSeeFullProjectList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/psiBtnSeeFullProjectList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="See full project list"
        android:textAllCaps="false"
        android:textSize="17sp"
        app:backgroundTint="#6247AA"
        app:cornerRadius="60dp"
        app:iconPadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/psiIntro4"
        app:layout_constraintStart_toStartOf="@id/psiBtnSuggestOwnProject"
        app:layout_constraintEnd_toEndOf="@id/psiBtnSuggestOwnProject"
        />


    <Button
        android:id="@+id/psiBtnContinueToWorkspace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Home"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:textColor="#6247AA"
        android:backgroundTint="#E9ECEF"
        app:cornerRadius="60dp"
        app:iconPadding="8dp"
        app:rippleColor="#33AAAAAA"
        app:strokeColor="#6247AA"
        app:strokeWidth="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>