<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E9ECEF">


    <TextView
        android:id="@+id/tvAnchor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject interests"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="20dp"/>

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_corner_radius"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="30dp"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvAnchor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_corner_radius"
        app:layout_constraintTop_toBottomOf="@+id/spinner1"
        android:paddingVertical="10dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_corner_radius"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner2"
        android:layout_marginHorizontal="30dp"
        android:paddingVertical="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_corner_radius"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner3"
        android:layout_marginHorizontal="30dp"
        android:paddingVertical="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvOtherInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/spinner4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="30dp"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Any Other Information"
            android:layout_gravity="start"
            android:layout_marginStart="7dp"/>

        <EditText
            android:id="@+id/etOtherInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </EditText>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnConfirmChoices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="30dp"
        android:text="Confirm choices"
        android:textAllCaps="false"
        android:layout_marginTop="15dp"
        android:textColor="#6247AA"
        android:textSize="20sp"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="60dp"
        app:iconPadding="8dp"
        app:rippleColor="#33AAAAAA"
        app:strokeColor="#6247AA"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@+id/cvOtherInfo"/>


</androidx.constraintlayout.widget.ConstraintLayout>