<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E9ECEF">

    <ImageButton
        android:id="@+id/fpiPopFragment"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:background="@drawable/undo"
        android:scaleX="0.5"
        android:scaleY="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/tvAnchor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject interests"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#6247AA"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="20dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvOtherInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/tvAnchor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="30dp"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="50dp">


        <EditText
            android:id="@+id/etOtherInformation"
            android:hint="Subject interests / keywords"
            android:layout_width="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_height="wrap_content" >
        </EditText>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnConfirmChoices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="30dp"
        android:text="Confirm choices"
        android:textAllCaps="false"
        android:layout_marginTop="15dp"
        android:textColor="#6247AA"
        android:textSize="20sp"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="60dp"
        app:iconPadding="8dp"
        app:rippleColor="#33AAAAAA"
        app:strokeColor="#6247AA"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@+id/cvOtherInfo"/>


</androidx.constraintlayout.widget.ConstraintLayout>