<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#DEC9E9">

    <ImageButton
        android:id = "@+id/suggestion1"
        android:textSize = "18sp"
        android:textAlignment = "center"
        android:background = "@drawable/project_suggestion_circle"
        android:layout_width = "200dp"
        android:textColor = "#000"
        android:layout_height = "200dp"
        android:backgroundTint="#6247AA"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
        android:id = "@+id/suggestion2"
        android:textSize = "18sp"
        android:textAlignment = "center"
        android:background = "@drawable/project_suggestion_circle"
        android:layout_width = "195dp"
        android:textColor = "#000"
        android:layout_height = "195dp"
        android:backgroundTint="#815AC0"
        android:layout_marginTop="-40dp"
        android:layout_marginStart="-40dp"
        app:layout_constraintStart_toEndOf="@id/suggestion1"
        app:layout_constraintTop_toBottomOf="@id/suggestion1"
        />

    <ImageButton
        android:id = "@+id/suggestion3"
        android:textSize = "18sp"
        android:textAlignment = "center"
        android:background = "@drawable/project_suggestion_circle"
        android:layout_width = "185dp"
        android:textColor = "#000"
        android:layout_height = "185dp"
        android:backgroundTint="#A06CD5"
        android:layout_marginTop="-40dp"
        android:layout_marginEnd="-40dp"
        app:layout_constraintEnd_toStartOf="@id/suggestion2"
        app:layout_constraintTop_toBottomOf="@id/suggestion2"/>

    <ImageButton
        android:id = "@+id/suggestion4"
        android:textSize = "18sp"
        android:textAlignment = "center"
        android:background = "@drawable/project_suggestion_circle"
        android:layout_width = "180dp"
        android:textColor = "#000"
        android:layout_height = "180dp"
        android:backgroundTint="#B185DB"
        android:layout_marginTop="-40dp"
        android:layout_marginStart="-40dp"
        app:layout_constraintTop_toBottomOf="@id/suggestion3"
        app:layout_constraintStart_toEndOf="@id/suggestion3"

        />


</androidx.constraintlayout.widget.ConstraintLayout>