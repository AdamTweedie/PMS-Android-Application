<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E9ECEF"
    android:paddingTop="50dp">



    <ScrollView
        android:id="@+id/swStudentScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.3"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/swClStudents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp">

            <TextView
                android:id="@+id/swScrollViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:paddingTop="10dp"
                android:text="My Students:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#6247AA"
                android:paddingBottom="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/swStudent1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="student 1"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/swScrollViewTitle"
                app:layout_constraintStart_toStartOf="@id/swScrollViewTitle"
                />

            <ImageButton
                android:layout_width="59dp"
                android:layout_height="42dp"
                android:background="@drawable/undo"
                android:rotation="180"
                android:scaleX="0.2"
                android:scaleY="0.2"
                app:layout_constraintBottom_toBottomOf="@id/swStudent1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/swStudent1"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/swProjectRequests"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@id/swStudentScrollView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintWidth_percent="0.5" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:paddingVertical="15dp"
            android:paddingHorizontal="15dp"
            android:layout_marginStart="15dp"
            android:text="Project requests"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#6247AA" />

        <Button
            android:id="@+id/swBtnProjectRequests"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/swCalendar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/swStudentScrollView"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintWidth_percent="0.5" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:paddingVertical="15dp"
            android:paddingHorizontal="15dp"
            android:layout_marginStart="15dp"
            android:text="Calendar"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#6247AA" />

        <Button
            android:id="@+id/swBtnCalendarView"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>